@{
  Layout = "_Layout";
}

@using System.Security.Claims
@using PierreSweets.Models;
@model IEnumerable<PierreSweets.Models.Treat>;


<h2>Authentication with Identity</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
    <p>Hello @User.Identity.Name!</p>

    <p>@Html.ActionLink("See all Treats", "Index", "Treats")</p>
    <p>@Html.ActionLink("Add new treat", "Create", "Treats")</p>
    <p>@Html.ActionLink("See all Flavors", "Index", "Flavors")</p>
    <p>@Html.ActionLink("Add new flavor", "Create", "Flavors")</p>

    @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" class="btn btn-default" value="Log out" />
    }
}
else
{
    <p>@Html.ActionLink("Register", "Register")</p>
    <p>@Html.ActionLink("Log in", "Login")</p>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>